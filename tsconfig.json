  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "declaration": true,                   
    "strict": true,                           
    "noImplicitAny": true,                 
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true
  }
}
